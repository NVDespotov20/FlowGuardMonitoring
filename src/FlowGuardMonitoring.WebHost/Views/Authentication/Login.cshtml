@using FlowGuardMonitoring.WebHost.Extentions
@using FlowGuardMonitoring.WebHost.Resources
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FlowGuardMonitoring.WebHost.Models.Authentication.LoginViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
    var globalError = this.ViewContext.ModelState.GetFirstGlobalError();
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">@AuthLocals.LoginTitle</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrWhiteSpace(globalError))
                    {
                        <span class="d-block text-small alert alert-danger">
                            @globalError
                        </span>
                    }
                    <form asp-action="Login" method="post">
                        <div class="form-group">
                            <label for="email">@AuthLocals.EmailLabel</label>
                            <input type="email"
                                   asp-for="Email"
                                   class="form-control"
                                   id="email"
                                   placeholder="@AuthLocals.EmailPlaceholder">
                            <span class="text-danger text-small mt-3" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label for="password">@AuthLocals.PasswordLabel</label>
                            <input type="password"
                                   asp-for="Password"
                                   class="form-control"
                                   id="password"
                                   placeholder="@AuthLocals.PasswordPlaceholder">
                            <span class="text-danger text-small mt-3" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-check mt-3">
                            <input class="form-check-input"
                                   type="checkbox"
                                   asp-for="RememberMe"
                                   id="rememberMe">
                            <label class="form-check-label" for="rememberMe">@AuthLocals.RememberMe</label>
                        </div>
                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-success">@AuthLocals.LoginTitle</button>
                        </div>
                    </form>
                    <div class="text-small mt-2 text-center">
                        <a href="@Url.Action("ForgotPassword")">@AuthLocals.ForgotPasswordText</a>
                    </div>
                    <div class="text-small mt-2 text-center">
                        <a href="@Url.Action("Register")">@AuthLocals.RegisterText</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
