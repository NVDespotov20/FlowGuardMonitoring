@using FlowGuardMonitoring.WebHost.Resources
@model ForgotPasswordViewModel
@{
    Layout = "_AuthLayout";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">@AuthLocals.ForgotPasswordTitle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="ForgotPassword">
                        <div class="form-group">
                            <label for="email">@AuthLocals.EmailLabel</label>
                            <input type="email" 
                                   asp-for="Email"
                                   class="form-control" 
                                   id="email" 
                                   placeholder="@AuthLocals.EmailPlaceholder">
                        </div>
                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">@AuthLocals.ForgotPasswordBtn</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
