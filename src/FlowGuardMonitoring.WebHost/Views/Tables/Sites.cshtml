@{
    ViewData["Title"] = "Locations";
    Layout = "_Layout";
    ViewData["ScriptPath"] = "/Tables/Partials/TablesScript";
}
@model FlowGuardMonitoring.BLL.Models.PaginatedResult<FlowGuardMonitoring.WebHost.Models.Tables.SiteViewModel>

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Locations</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table
                    id="basic-datatables"
                    class="display table table-striped table-hover"
                >
                    <thead>
                    <tr>
                        <th>@nameof(FlowGuardMonitoring.WebHost.Models.Tables.SiteViewModel.Name)</th>
                        <th>@nameof(FlowGuardMonitoring.WebHost.Models.Tables.SiteViewModel.Longitude)</th>
                        <th>@nameof(FlowGuardMonitoring.WebHost.Models.Tables.SiteViewModel.Latitude)</th>
                        <th>@nameof(FlowGuardMonitoring.WebHost.Models.Tables.SiteViewModel.Description)</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>@nameof(FlowGuardMonitoring.WebHost.Models.Tables.SiteViewModel.Name)</th>
                        <th>@nameof(FlowGuardMonitoring.WebHost.Models.Tables.SiteViewModel.Longitude)</th>
                        <th>@nameof(FlowGuardMonitoring.WebHost.Models.Tables.SiteViewModel.Latitude)</th>
                        <th>@nameof(FlowGuardMonitoring.WebHost.Models.Tables.SiteViewModel.Description)</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    @foreach (var site in Model.Records)
                    {
                        <tr>
                            <td>@site.Name</td>
                            <td>@site.Longitude</td>
                            <td>@site.Latitude</td>
                            <td>@site.Description</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
