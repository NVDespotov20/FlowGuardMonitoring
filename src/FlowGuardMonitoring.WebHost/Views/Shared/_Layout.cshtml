<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewData["Title"] | FlowGuard Monitoring</title>
    <meta
        content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
        name="viewport"
    />
    <link
        rel="icon"
        href="~/favicon.ico"
        type="image/x-icon"
    />

    <!-- Fonts and icons -->
    <script src="~/js/plugin/webfont/webfont.min.js"></script>
    <script>
        WebFont.load({
            google: { families: ["Public Sans:300,400,500,600,700"] },
            custom: {
                families: [
                    "Font Awesome 6 Solid",
                    "Font Awesome 6 Regular",
                    "Font Awesome 6 Brands",
                    "simple-line-icons",
                ],
                urls: [ "/css/all.min.css"],
            },
            active: function () {
                sessionStorage.fonts = true;
            },
        });
    </script>

    <!-- CSS Files -->
    <link rel="stylesheet" href="~/css/flatpickr.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/plugins.min.css" />
    <link rel="stylesheet" href="~/css/flowguard.min.css" />
    @if (ViewData["Map"] != null)
    {
    <!-- Leaflet CSS -->
    <link 
        rel="stylesheet" 
        href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
        integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
        crossorigin=""
    />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.css" />
    }

</head>
<body>
<div class="wrapper">
    <partial name="_Sidebar"/>
    <div class="main-panel">
        <div class="main-header">
            <div class="main-header-logo">
                <!-- Logo Header -->
                <div class="logo-header" data-background-color="dark">
                    <a asp-page="/Home/Index" class="logo">
                        <img
                            src="~/img/logo.svg"
                            alt="navbar brand"
                            class="navbar-brand"
                            height="20"/>
                    </a>
                    <div class="nav-toggle">
                        <button class="btn btn-toggle toggle-sidebar">
                            <i class="gg-menu-right"></i>
                        </button>
                        <button class="btn btn-toggle sidenav-toggler">
                            <i class="gg-menu-left"></i>
                        </button>
                    </div>
                    <button class="topbar-toggler more">
                        <i class="gg-more-vertical-alt"></i>
                    </button>
                </div>
                <!-- End Logo Header -->
            </div>
            <partial name="_Navbar"/>
        </div>
        <div class="container">
            <div class="page-inner">
                @RenderBody()
            </div>
        </div>
    </div>
</div>
<!--   Core JS Files   -->

<script src="~/js/core/jquery-3.7.1.min.js"></script>
<script src="~/js/core/popper.min.js"></script>
<script src="~/js/core/bootstrap.min.js"></script>

<!-- jQuery Scrollbar -->
<script src="~/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>

<!-- Chart.js -->
<script src="~/js/plugin/chart.js/chart.min.js"></script>

<!-- jQuery Sparkline -->
<script src="~/js/plugin/jquery.sparkline/jquery.sparkline.min.js"></script>

<!-- FlatPickr -->
<script src="~/js/plugin/flatpickr/flatpickr.js"></script>

<!-- Day.js -->
<script src="~/js/plugin/day.js/dayjs.min.js"></script>
<script src="~/js/plugin/day.js/relativetime.min.js"></script>
<script>
    dayjs.extend(dayjs_plugin_relativeTime);
</script>

<!-- Datatables -->
<script src="~/js/plugin/datatables/datatables.min.js"></script>

<!-- Bootstrap Notify -->
<script src="~/js/plugin/bootstrap-notify/bootstrap-notify.min.js"></script>

<!-- jQuery Vector Maps -->
<script src="~/js/plugin/jsvectormap/jsvectormap.min.js"></script>
<script src="~/js/plugin/jsvectormap/world.js"></script>

<!-- Sweet Alert -->
<script src="~/js/plugin/sweetalert/sweetalert.min.js"></script>
<script type="text/javascript" src="~/js/plugin/default-passive-events/dist/index.js"></script>

@if (ViewData["Map"] != null)
{
<script
    src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
    crossorigin=""
></script>
<script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>
}

<!-- FlowGuard JS -->
<script src="~/js/flowguard.js"></script>

<partial name="_LogoutModal"/>
@if ((bool)(ViewData["MeasurementsScript"] ?? false))
{
    <partial name="Measurements/_MeasurementsScript"/>
}
@if (ViewData["ScriptPath"] != null)
{
    if (ViewData["ScriptModel"] != null)
    {
        <partial name="../@ViewData["ScriptPath"]" model="@ViewData["ScriptModel"]"/>
    }
    else
    {
        <partial name="../@ViewData["ScriptPath"]"/>
    }
}
</body>
</html>
